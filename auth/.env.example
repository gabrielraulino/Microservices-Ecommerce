# Auth Service - Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
AUTH_SERVICE_PORT=8085

# Eureka Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka/
HOSTNAME=localhost

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-min-256-bits-for-security-purposes
JWT_EXPIRATION=86400000

# Admin Registration Key
ADMIN_KEY=admin-secret-key

# Service-to-Service Authentication Secret
# This secret must match the secret configured in User Service
SERVICE_SECRET=change-this-service-secret-in-production
