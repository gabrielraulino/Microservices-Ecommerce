# User Service - Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_PORT=8081

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/ms-user
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your-database-password

# Eureka Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka/
HOSTNAME=localhost

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-min-256-bits-for-security

# Service-to-Service Authentication Secret
# This secret must match the secret configured in Auth Service
SERVICE_SECRET=change-this-service-secret-in-production
